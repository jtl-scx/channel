{
    "name": "jtl-scx/channel",
    "license": "MIT",
    "require": {
        "symfony/console": "^5.0",
        "symfony/dotenv": "^5.0",
        "jtl-scx/channel-core": "^0.27",
        "monolog/monolog": "^2.0",
        "twig/twig": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^2.15"
    },
    "autoload": {
        "psr-4": {
            "JTL\\SCX\\Channel\\": "src/"
        }
    },
    "scripts": {
        "phpcs": [
            "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist"
        ],
        "phpcs-dry": [
            "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist --dry-run"
        ]
    },
    "prefer-stable" : true
}

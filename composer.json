{
    "name": "jtl-scx/channel",
    "license": "MIT",
    "require": {
        "symfony/console": "^4.3",
        "symfony/dotenv": "^4.3",
        "jtl-scx/channel-core": "^0.9",
        "monolog/monolog": "^2.0",
        "twig/twig": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^2.15"
    },
    "autoload": {
        "psr-4": {
            "JTL\\SCX\\Channel\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@gitlab.jtl-software.com:ea/scx/channel-lib.git"
        }
    ],
    "scripts": {
        "phpcs": [
            "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist"
        ],
        "phpcs-dry": [
            "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist --dry-run"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable" : true
}

{
    "name": "jtl-scx/channel",
    "license": "MIT",
    "require": {
        "php": "8.1.*",
        "symfony/console": "^6.1",
        "symfony/dotenv": "^6.0",
        "jtl-scx/channel-core": "^0.80.0",
        "monolog/monolog": "^2.0",
        "twig/twig": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "psalm/phar": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "JTL\\SCX\\Channel\\": "src/"
        }
    },
    "scripts": {
        "phpcs": [
            "vendor/bin/php-cs-fixer fix src --rules=@PSR12"
        ],
        "phpcs-dry": [
            "vendor/bin/php-cs-fixer fix src --rules=@PSR12 --dry-run"
        ],
        "psalm": [
            "vendor/bin/psalm.phar"
        ]
    },
    "prefer-stable" : true
}
